.moduleTitle Saved Recipes
.savedRecipesContainer
    .savedRecipesWrapper(ng-repeat='recipe in recipes')
        .recipeName
            .recipeItemName {{recipe.name}}
        .recipe.recipeGrain Grain: &nbsp;
            .recipeItemName(ng-repeat='grains in recipe.grain track by $index') {{grains.amount}}lbs {{grains.grain.name}}
        .recipe.recipeHops Hops: &nbsp;
            .recipeItemName(ng-repeat='hops in recipe.hops track by $index') {{hops.boil}}mins. {{hops.amount}}oz.  {{hops.hop.name}}
        .recipe.recipeYeast Yeast: &nbsp;
            .recipeItemName(ng-repeat='yeast in recipe.yeast') {{yeast.name}}
        .recipe.recipeSRM SRM: &nbsp;
            .recipeItemName {{recipe.srm}}Â°L
        .recipe.recipeIBU IBU: &nbsp;
            .recipeItemName {{recipe.ibu}}
        .recipe.recipeOG OG: &nbsp;
            .recipeItemName {{recipe.og}}
        .recipe.recipeFG FG: &nbsp;
            .recipeItemName {{recipe.fg}}
        .recipe.recipeABV ABV: &nbsp;
            .recipeItemName {{recipe.abv}}%
