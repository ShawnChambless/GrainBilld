h1 Database Editor

h1(ng-click='toggleGrain()') Add Grain
form(ng-submit='addGrainToDb(grain)' ng-show='showGrain')
    input(type='text' autofocus ng-model='grain.name' placeholder='Grain Name...')
    input(type='text' ng-model='grain.type' placeholder='Grain Type...')
    input(type='text' ng-model='grain.origin' placeholder='Grain Origin...')
    input(type='text' ng-model='grain.alphaAmylase' placeholder='Alpha Amalyse...')
    input(type='text' ng-model='grain.diastaticPower' placeholder='Diastatic Power...')
    input(type='text' ng-model='grain.lovibond', placeholder='Lovibond...')
    input(type='text' ng-model='grain.extractPercent' placeholder='Extract Percentage...')
    input(type='text' ng-model='grain.solubleProtein' placeholder='Soluble Protein...')
    input(type='text' ng-model='grain.totalProtein' placeholder='Total Protein...')
    input(type='text' ng-model='grain.usage' placeholder='Usage Percentage...')
    input(type='text' ng-model='grain.moisture' placeholder='Moisture Percentage...')
    input(type='text' ng-model='grain.description' placeholder='Grain Description...')
    input(type='submit' value='Add Grain')
    
h1(ng-click='toggleHops()') Add Hops
form(ng-submit='addHopsToDb(hops)' ng-show='showHops')
    input(type='text' ng-model='hops.name' placeholder='Name...')
    input(type='text' ng-model='hops.origin' placeholder='Origin...')
    input(type='text' ng-model='hops.type' placeholder='Type...(flavor, bittering, etc.)')
    input(type='text' ng-model='hops.form' placeholder='Form...(pellet, leaf, etc)')
    input(type='text' ng-model='hops.alphaAcid' placeholder='Alpha Acid...')
    input(type='text' ng-model='hops.cohumulone' placeholder='Cohumulone...')
    input(type='text' ng-model='hops.betaAcid' placeholder='Beta Acid...')
    input(type='text' ng-model='hops.totalOil' placeholder='Total Oil...')
    input(type='text' ng-model='hops.myrcene' placeholder='Myrcene...')
    input(type='text' ng-model='hops.humulene' placeholder='Humulene...')
    input(type='text' ng-model='hops.humuleneCaryophyllene' placeholder='Humulene Caryophyllene')
    input(type='submit' value='Add Hops')
h1(ng-click='toggleYeast') Add Yeast
form(ng-submit='addYeastToDb(yeast)' ng-show='showYeast')
    input(type='text' ng-model='yeast.name' placeholder='Name...')
    input(type='text' ng-model='yeast.format' placeholder='Format...(liquid, dry)')
    input(type='text' ng-model='yeast.type' placeholder='Type(ale, lager, etc)')
    input(type='text' ng-model='yeast.origin' placeholder='Origin')
    input(type='text' ng-model='yeast.minimumTemperature' placeholder='Minimum temperature...')
    input(type='text' ng-model='yeast.maximumTemperature' placeholder='Maximum temperature...')
    input(type='text' ng-model='yeast.flocculation' placeholder='Flocculation...')
    input(type='text' ng-model='yeast.minimumAttenuation' placeholder='Minimum attenuation...')
    input(type='text' ng-model='yeast.maximumAttenuation' placeholder='Maximum attenuation...')
    input(type='submit' value='Add Yeast')
h1(ng-click = 'toggleGrainInDb()') Grain in Database
.databaseContainer

    h3(ng-repeat='item in grains' ng-show='showGrainInDb')
        span.itemName {{item.name}}:<br /> 
        span.item Malt type: 
        {{item.type}} malt<br />
        span.item Origin: 
        {{item.origin}}<br /> 
        span.item Alpha Amaylase: 
        {{item.alphaAmylase}}<br /> 
        span.item Diastatic Power: 
        {{item.diastaticPower}}<br /> 
        span.item Lovibond: 
        {{item.lovibond}}L<br /> 
        span.item Extract %: 
        {{item.extractPercent}}%<br /> 
        span.item Soluble Protein: 
        {{item.solubleProtein}}<br /> 
        span.item Total Protein: 
        {{item.totalProtein}}<br /> 
        span.item Usage %: 
        {{item.usage}}%<br /> 
        span.item Moisture %: 
        {{item.moisture}}%<br /> 
        span.itemDescription(ng-click='toggleShowDescription()') Description: 
