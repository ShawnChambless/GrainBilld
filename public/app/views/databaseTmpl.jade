    input(type='text' ng-model='addHops.origin' placeholder='Origin...')
    input(type='text' ng-model='addHops.type' placeholder='Type...(flavor, bittering, etc.)')
    input(type='text' ng-model='addHops.alphaAcid' placeholder='Alpha Acid...')
    input(type='text' ng-model='addHops.cohumulone' placeholder='Cohumulone...')
    input(type='text' ng-model='addHops.colupulone' placeholder='Colupulone...')
    input(type='text' ng-model='addHops.betaAcid' placeholder='Beta Acid...')
    input(type='text' ng-model='addHops.totalOil' placeholder='Total Oil...')
    input(type='text' ng-model='addHops.myrcene' placeholder='Myrcene...')
    input(type='text' ng-model='addHops.humulene' placeholder='Humulene...')
    input(type='text' ng-model='addHops.humuleneCaryophyllene' placeholder='Humulene Caryophyllene')
    input(type='text' ng-model='addHops.linalool' placeholder='Linalool...')
    input(type='text' ng-model='addHops.flavor' placeholder='Flavor/Aroma...')
    input(type='text' ng-model='addHops.style' placeholder='Style...')
    input(type='text' ng-model='addHops.parentage' placeholder='Parentage...')
    input(type='text' ng-model='addHops.description' placeholder='Description...')
    input(type='submit' value='Add Hops')
h1(ng-click='toggleYeast()') Add Yeast
form(ng-submit='addYeastToDb(yeast)' ng-show='showYeast')
    input(type='text' ng-model='yeast.name' placeholder='Name...' autofocus)
    input(type='text' ng-model='yeast.format' placeholder='Format...(liquid, dry)')
    input(type='text' ng-model='yeast.type' placeholder='Type(ale, lager, etc)')
    input(type='text' ng-model='yeast.origin' placeholder='Origin')
    input(type='text' ng-model='yeast.minimumTemperature' placeholder='Minimum temperature...')
    input(type='text' ng-model='yeast.maximumTemperature' placeholder='Maximum temperature...')
    input(type='text' ng-model='yeast.flocculation' placeholder='Flocculation...')
    input(type='text' ng-model='yeast.minimumAttenuation' placeholder='Minimum attenuation...')
    input(type='text' ng-model='yeast.maximumAttenuation' placeholder='Maximum attenuation...')
    input(type='submit' value='Add Yeast')
h1(ng-click = 'toggleGrainInDb()') Grain in Database
