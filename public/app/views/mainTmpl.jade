a(ng-href='/#/NewBatch')    
    .title Grain Billd{{pageTitle}}
.containerContainer
    .container
        .ingredientModule
            //.moduleTitle Add Ingredients
            .ingredient.grain Grain
                .grainBox
                    .boxImage(ng-click='showGrainFunction()' ng-hide='showGrainBox')
                            
            .ingredient.hops Hops
                .hopsBox
                    .boxImage(ng-click='showHopsFunction()' ng-hide='showHopsBox')
                
            .ingredient.yeast  Yeast
                .yeastBox
                    .boxImage(ng-click='showYeastFunction()' ng-hide='showYeastBox') 
                
        .searchResults  
            form.grain(ng-show='showGrainBox')
                label.grain Add Grain! <br />
                input.grain(type='text' ng-model='grainSearchText' placeholder='Search grains...')
                input.grain(type='text' ng-model='grainWeight' placeholder='Pounds of Grain')
                button(ng-click='addGrainToRecipe(grainSearchText); getSrm()') Add to recipe
                span(class="x" ng-click='showGrainFunction()') X
                .grainSearchResults(ng-repeat='item in grainsInDb | filter:grainSearchText')
                    .grainName(ng-click='addToGrainSearchText(item)') {{item.name}} <hr />
                
            form.hops(ng-show='showHopsBox')
                label.hops Add Hops! <br />
                input.hops(type='text' ng-model='hopsSearchText' placeholder='Enter hops...')
                button(ng-click='addHopsToRecipe(hopsSearchText)') Add to recipe
                span(class="x" ng-click='showHopsFunction()') X
                .hopsSearchResults(ng-repeat='item in hopsInDb | filter:hopsSearchText')
                    .hopsName(ng-click='addToHopsSearchText(item)') {{item.name}} <hr />
            
            form.yeast(ng-show='showYeastBox')
                label.yeast Add Yeast! <br />
                input.yeast(type='text' ng-model='yeastSearchText' placeholder='Enter yeast...')
                button(ng-click='addYeastToRecipe(yeastSearchText)') Add to recipe
                span(class="x" ng-click='showYeastFunction()') X
                .yeastSearchResults(ng-repeat='item in yeastInDb | filter:yeastSearchText')
                    .yeastName(ng-click='addToYeastSearchText(item)') {{item.name}} <hr />
            
    .batchModule
        .recipeIngredientWrapper
            .grainInRecipe(ng-repeat='grain in grainInRecipe')
                .recipe.grainName {{grain.name}}
                    span(class='octicon octicon-question' ng-click='toggleGrainInfo()')
                .grainInfo(ng-show='showGrainInfo')
                    {{grain.description}} &nbsp;
                    span.item Type: 
                    {{grain.type}} 
                    span.item SRM: 
                    {{grain.lovibond}}°L
                
            .hopsInRecipe(ng-repeat='hops in hopsInRecipe')
                .recipe.hopsName {{hops.name}}
                    span(class='octicon octicon-question' ng-click='toggleHopsInfo()')
                .hopsInfo(ng-show='showHopsInfo') 
                    {{hops.description}} &nbsp;
                    span.item Alpha Acid: 
                    {{hops.alphaAcid}}% 
                    span.item Beta Acid:
                    {{hops.betaAcid}}%
                
            .yeastInRecipe(ng-repeat='yeast in yeastInRecipe')
                .recipe.yeastName {{yeast.name}}
                    span(class='octicon octicon-question' ng-click='toggleYeastInfo()')
                .yeastInfo(ng-show='showYeastInfo')
                    {{yeast.description}} &nbsp;
                    span.item Flocculation: 
                    {{yeast.flocculation}} 
                    span.item Temp: 
                    {{yeast.minimumTemperature}}° 
                    span.item Max. Temp: 
                    {{yeast.maximumTemperature}}° 
                    span.item Min. Att.: 
                    {{yeast.minimumAttenuation}}% 
                    span.item Max. Att.: 
                    {{yeast.maximumAttenuation}}%
        .recipeInfoBox
            .recipeInfo {{recipeSrm}} {{recipeIBU}} {{recipeAlcohol}}
            
