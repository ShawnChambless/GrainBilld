                span.item Origin: 
                {{hop.origin}}<br />
                span.item Type: 
                {{hop.type}}<br />
                span.item Form: 
                {{hop.form}}<br />
                span.item Alpha Acid: 
                {{hop.alphaAcid}}%<br />
                span.item Cohumulone: 
                {{hop.cohumulone}}%<br />
                span.item Colupulone: 
                {{hop.colupulone}}%<br />
                span.item Beta Acid: 
                {{hop.betaAcid}}%<br />
                span.item Total Oil: 
                {{hop.totalOil}}mL/100g<br />
                span.item Myrcene: 
                {{hop.myrcene}}% of total oil<br />
                span.item Humulene: 
                {{hop.humulene}}% of total oil<br />
                span.item Humulene Caryophyllene: 
                {{hop.humuleneCaryophyllene}}% of total oil<br />
                span.item Linalool: 
                {{hop.linalool}}%<br />
                span.item Flavor/Aroma: 
                {{hop.flavor}}<br />
                span.item Style: 
                {{hop.style}}<br />
                span.item Parentage: 
                {{hop.parentage}}<br />
                span.itemDescription Description: 
                span.description {{hop.description}} <br />

