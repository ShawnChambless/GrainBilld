.titleBar
    a(ng-href='/#/IngredientInfo')    
        .title Grain Billd{{pageTitle}}
    a(ng-href='/#/NewBatch')
        .link Back to New Batch
    a(ng-href='/#/MyRecipes')
        .link My Recipes
.containerContainer
    h1(ng-click = 'showGrainInDb = !showGrainInDb') Grain in Database
    input(ng-model='grainSearchText' ng-show='showGrainInDb' placeholder='Filter grain')
    .databaseContainer(ng-show='showGrainInDb')
        h3(ng-repeat='grain in grainInDb | filter:grainSearchText' ng-show='showGrainInDb')
            span.itemName(ng-click='showDescription = !showDescription') {{grain.name}}<br /> 
            .itemInfo(ng-show='showDescription')
                span.item Malt type: 
                {{grain.type}} malt<br />
                span.item Origin: 
                {{grain.origin}}<br /> 
                span.item Alpha Amaylase: 
                {{grain.alphaAmylase}}<br /> 
                span.item Diastatic Power: 
                {{grain.diastaticPower}}<br /> 
                span.item Lovibond: 
                {{grain.lovibond}}L<br /> 
                span.item Extract %: 
                {{grain.extractPercent}}%<br /> 
                span.item Soluble Protein: 
                {{grain.solubleProtein}}<br /> 
                span.item Total Protein: 
                {{grain.totalProtein}}<br /> 
                span.item Usage %: 
                {{grain.usage}}%<br /> 
                span.item Moisture %: 
                {{grain.moisture}}%<br /> 
                span.item SG: 
                {{grain.sg}}<br />
                span.itemDescription Description: 
                span.description {{grain.description}} <br />

    h1(ng-click='showHopsInDb = !showHopsInDb') Hops in Database
    input(ng-model='hopsSearchText' ng-show='showHopsInDb' placeholder='Filter hops')
